@model Bet
@{
    ViewBag.Title = $"Welcome, {ViewBag.Name}!";
}

    <form asp-controller="Home" asp-action="Index" method="post" enctype="application/x-www-form-urlencoded">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="BetAmount">How many coins would you like to wager?</label>
            <input type="text" asp-for="BetAmount" class="form-control" />
        </div>

        <input type="submit" value="Start Playing!" class="btn btn-primary" />

    </form>

